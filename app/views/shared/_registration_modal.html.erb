<div class="modal fade" id="register-modal" tabindex="-1" role="dialog" aria-labelledby="register-modal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document" data-controller="remote-form">
    <div class="modal-content bg-black">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        <h2 class="mb-30 c-white">Sign up</h2>

        <div class="alert text-center c-white is-hidden" role="alert" id='error-messages'></div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>

          <div class="form-group">
            <%= f.label :name, class: 'd-block' %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'd-block' %>
            <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'd-block' %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: 'd-block' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-rect-lg push-button btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
