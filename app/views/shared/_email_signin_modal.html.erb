<div class="modal fade" id="email-signin-modal" tabindex="-1" role="dialog" aria-labelledby="email-signin-modal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-black">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        <h2 class="mb-30 c-white">Log in</h2>

        <div class="alert text-center c-white is-hidden" role="alert" id='error-messages'></div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'd-block' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'd-block' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-rect-lg push-button btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
