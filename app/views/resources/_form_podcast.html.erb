<%= form_for(resource, url: resources_path(resource_type: resource.resourceable_type, resource_id: resource.id), remote: true, id: 'submit-resource') do |form| %>
  <%= form.hidden_field :resourceable_type %>
  <%= form.fields_for :resourceable do |form| %>

    <div class="form-group">
      <%= form.label :url, 'Podcast URL', class: 'd-block' %>
      <%= form.text_field :url, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :title, 'Podcast Title', class: 'd-block' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description, 'Podcast Description', class: 'd-block' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <%= render partial: 'form_field_image_or_image_url', locals: { form: form } %>

    <div class="form-group">
      <%= form.label :created_by, class: 'd-block' %>
      <%= form.text_field :created_by, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :rss, 'Podcast RSS', class: 'd-block' %>
      <%= form.text_field :rss, class: 'form-control' %>
    </div>
  <%- end %>

  <div class="actions">
    <%= form.submit 'Submit Podcast', class: 'btn btn btn-rect-lg push-button btn-secondary' %>
  </div>
<% end %>
