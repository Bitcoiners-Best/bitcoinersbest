<div class="container-that-doesnt-break-dstrukts-shit" data-controller="infinity-scroll">
  <% resources.each do |resource| %>
    <div class="<%= resource.resourceable_type %>-module d-flex br-4 mb-40 fade-in resource" data-controller='vote' data-vote-type="<%= resource.resourceable_type %>" id="resource-<%= resource.id %>" data-vote-title="<%= resource.title %>" data-vote-url="<%= new_resource_vote_path(resource.id) %>">

      <div class="d-flex flex-sm-row flex-column">
        <div class="pr-30 mobile-resource-image">
          <%if resource.resourceable.respond_to?(:image) && resource.resourceable.image.attached? %>
            <%= image_tag resource.resourceable.image.variant(resize_to_limit: [300, 300]), class: resource_list_image_class(resource) %>
          <% else %>
            <img class='ew-100 card-img' src="" %>
          <% end %>
        </div>

        <div class="flex-grow-1 call-render resource-content">
          <%= render resource.resourceable %>
        </div>
      </div>

      <div class="align-self-top pl-20 ml-auto resource-action">
        <div class="votes text-center">
          <a class="vote btn btn-transparent bg-brand icon-wrap" data-user-votes="<%= current_user.try(:settled_votes_for, resource).to_i %>" data-action="click->vote#invoice_modal">
            <svg class="regular-vote" class="active push-button" width="32" height="40" viewBox="0 0 9 28" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.99984 0L-0.00015655 17.1C-0.100157 17.3 0.199843 17.5 0.399843 17.4L2.39984 16.2C2.89984 15.9 3.49984 16.2 3.49984 16.8L3.89984 27.4C3.89984 27.5 3.99984 27.5 3.99984 27.4L8.09984 10.2C8.19984 10 7.89984 9.8 7.69984 9.9L5.69984 11.1C5.19984 11.4 4.59984 11.1 4.59984 10.5L3.99984 0C3.99984 0 4.09984 0 3.99984 0Z" fill="#6F7C91"/>
            </svg>
            <svg class="ten-x" class="push-button" width="32" height="40" viewBox="0 0 22 28" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10.7 0.4L11.2 10.9C11.2 11.5 11.9 11.8 12.3 11.5L14.3 10.3C14.5 10.2 14.7 10.4 14.7 10.6L10.6 27.8C10.6 27.9 10.5 27.8 10.5 27.8L10.1 17.2C10.1 16.6 9.4 16.3 9 16.6L7 17.8C6.8 17.9 6.6 17.7 6.6 17.5L10.7 0.4C10.7 0.3 10.6 0.3 10.7 0.4ZM2.4 0L0 10.4C0 10.5 0.1 10.6 0.2 10.6L1.4 9.9C1.7 9.7 2.1 9.9 2.1 10.3L2.4 16.7H2.5L4.8 6.2C4.8 6.1 4.7 6 4.6 6L3.4 6.8C3.1 7 2.8 6.8 2.7 6.4L2.4 0ZM19.3 0L16.9 10.4C16.9 10.5 17 10.6 17.1 10.6L18.3 9.9C18.6 9.7 19 9.9 19 10.3L19.3 16.7H19.4L21.8 6.2C21.8 6.1 21.7 6 21.6 6L20.4 6.7C20.1 6.9 19.7 6.7 19.7 6.3L19.3 0Z" fill="#6F7C91"/>
            </svg>
            <div class="vote-total" id="vote-total">
              <h6 class="medium mt-10 c-white" id="vote-count-<%= resource.id %>"><%= resource.vote_count %></h6>
              <!-- <h6 class="vote-increment bg-brand c-black br-4" id="vote-increment">10</h6> -->
            </div>
          </a>

          <a target="_blank" href="<%= resource.url %>" class="source-link btn btn-transparent">
            <svg width="14" height="14" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6.37204 2.84643L1.38955 7.7647C1.07167 8.0784 0.55629 8.0784 0.23841 7.7647C-0.07947 7.45089 -0.07947 6.94215 0.23841 6.62837L5.32543 1.60696H1.13206C0.68252 1.60696 0.31809 1.24723 0.31809 0.80348C0.31809 0.35973 0.68252 0 1.13206 0H8V6.69567C8 7.13942 7.63557 7.49915 7.18602 7.49915C6.73647 7.49915 6.37204 7.13942 6.37204 6.69567V2.84643Z" fill="#6C7C93"/>
            </svg>
          </a>

        </div>
      </div>

    </div>
  <% end %>
</div>

<% if resources.any? %>
  <div id="infinite-scrolling">
    <%= will_paginate resources %>
  </div>
<% end %>

<div class="page-load-status">
  <div class="loader-ellips infinite-scroll-request fade-in">
    <span class="loader-ellips__dot"></span>
    <span class="loader-ellips__dot"></span>
    <span class="loader-ellips__dot"></span>
    <span class="loader-ellips__dot"></span>
  </div>
</div>
